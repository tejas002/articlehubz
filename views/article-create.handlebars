<div class="card m-5">
    <div class="card-body">
        <h1>Create an article!</h1>
        <form class="form" action="/articles/create" method="post">
            <div class="form-group">
                <label for="articleTitle">Article Title</label>
                <input class="form-control" type="text" name="article[title]" placeholder="Enter title" autofocus/>
            </div>
            <div class="form-group">
                <label for="articleUrl">Article Url</label>
                <input class="form-control" type="text" name="article[url]" placeholder="Enter url" />
            </div>
            <div class="form-group">
                <label for="articleDescription">Article Description</label>
                <input class="form-control" type="text" name="article[description]" placeholder="Enter description" />
            </div>
            <button class="btn btn-primary clickable" type="submit">Create</button>
        </form>
    </div>
</div>