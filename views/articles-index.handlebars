<div class="list-group my-4">
    {{#each articles as |article index|}}
    <div class="list-group-item flex-column align-items-start">
        <div class="d-flex w-100 justify-content-between">
            <a href="{{article.url}}" target="_blank">
                <h5>{{article.title}}</h5>
            </a>
            <small>{{article.postDate}}</small>
        </div>
        <p>{{article.description}}</p>

        <p class="my-2">
            <form class="edit-delete" action="/articles/edit/{{article._id}}">
                <button class="btn btn-info btn-sm clickable" type="submit">Edit Post</button>
            </form>

            <form class="edit-delete" action="/articles/delete/{{article._id}}?_method=delete" method="post">
                <button class="btn btn-danger btn-sm clickable" type="submit">Delete Post</button>
            </form>
        </p>

        {{#if article.userid.local.username.length}}
        <div class="my-2">
            Created by: <b><i>{{article.userid.local.username}}</i></b>
        </div>
        {{/if}}

    </div>
    <p></p>
    {{/each}}
</div>

{{#if articles.length}}
<div class="card-body m-1 text-center">
    {{!--
    <h2>{{Add ad}}</h2> --}}
    <a class="btn btn-primary" href="/articles/create">Add New Article</a>
</div>
{{/if}} {{#if message.length}}
<div class="card" style="margin: 10rem!important">
    <div class="card-body m-1 text-center">
        <h2>{{message}}</h2>
        <a class="btn btn-primary" href="/articles/create">Add New Article</a>


    </div>
</div>
{{/if}}